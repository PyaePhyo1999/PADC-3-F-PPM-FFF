<?xml version="1.0" encoding="utf-8"?>
<com.example.acer.findforfood.viewpods.LoginUserViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover_url"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_background"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"
        android:tint="#6F000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_user_picture"
            android:layout_width="@dimen/user_picture_width"
            android:layout_height="@dimen/user_picture_height"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:scaleType="centerCrop"
            android:src="@drawable/user_picture" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_picture"
            android:layout_alignLeft="@id/iv_user_picture"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Pyae Phyo Maung"
            android:textColor="@color/full_white"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_user_picture"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="09969705428"
            android:textColor="@color/full_white"
            android:textSize="@dimen/text_regular" />

        <Button
            android:id="@+id/btn_logout"
            style="@style/accent_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_phone_number"
            android:layout_alignParentRight="true"
            android:text="Logout"
            android:layout_marginRight="12dp"
            android:textAllCaps="false" />
    </RelativeLayout>
</com.example.acer.findforfood.viewpods.LoginUserViewPod>