<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_trending_venues"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_trending_venues"
    android:foreground="@drawable/ripple_white">

    <ImageView
        android:id="@+id/iv_trending_venues"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_food_name" />

    <TextView
        android:id="@+id/tv_trending_venues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/iv_trending_venues"
        android:padding="4dp"
        android:text="Sushi Kimura"
        android:textColor="@color/full_black" />



</RelativeLayout>